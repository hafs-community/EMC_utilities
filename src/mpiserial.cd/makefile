SHELL=		/bin/sh
SRCS=		mpiserial.c
OBJS=		mpiserial.o
LSTS=		mpiserial.lst
CMD=		mpiserial

# IFORT WITH SGI MPT (Zeus):
CC=		mpicc
CFLAGS=		-DMPI_ABORT_FOR_NONZERO_EXIT

# IFORT WITH IBM POE (Tide, Gyre)
#CC=		mpcc
#CFLAGS=		

all:		$(CMD)

$(CMD):		$(OBJS)
	$(CC) $(CFLAGS) -o $(CMD) $(OBJS)

mpiserial.o:	mpiserial.c
	$(CC) -c $(FFLAGS) mpiserial.c

clean:
	rm -f $(OBJS) xref.db *~ *.o *.a a.out cmdfile *.out *.err *.log

bare: clean
	rm -f $(CMD)